{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* imports are relative to the src/ directory */
    "baseUrl": "src",

    /* The following linting settings we might want to get rid of in the future */
    "allowSyntheticDefaultImports": true,
    "strictFunctionTypes": false,
    "noImplicitAny": false
  },
  /* "types": ["vite/client"], not sure if needed */
  "include": [
    "src",
    "../graphql/*.ts",
    "../tests/*.ts",
    "../playwright.config.ts",
    "../global-setup.ts",
    "browser.ts"
  ]
}
